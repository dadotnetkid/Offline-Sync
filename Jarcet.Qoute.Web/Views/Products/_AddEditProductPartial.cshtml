<div class="margin-top-10 row">
    <div class="col-lg-12">
        @{
        Html.DevExpress().Button(btn =>
        {
            btn.Name = "btnUpdate";
            btn.Text = "Update";
            btn.Style.Add(HtmlTextWriterStyle.MarginRight, "10px");
            btn.ClientSideEvents.Click = "function(s,e){ProductsGridView.UpdateEdit()}";
        }).GetHtml();
        Html.DevExpress().Button(btn =>
        {
            btn.Name = "btnCancel";
            btn.Text = "Cancel";
            btn.Style.Add(HtmlTextWriterStyle.MarginRight, "10px");
            btn.ClientSideEvents.Click = "function(s,e){ProductsGridView.CancelEdit()}";
        }).GetHtml();
        }
    </div>
</div>