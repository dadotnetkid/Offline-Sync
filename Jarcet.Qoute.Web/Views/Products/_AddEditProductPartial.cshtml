            }).GetHtml();
            Html.DevExpress().TextBoxFor(m => m.Description, txt =>
            {

                txt.Width = Unit.Percentage(100);
            }).GetHtml();
        }
    </div>
    <div class="col-lg-6">
        @{
            Html.DevExpress().LabelFor(m => m.Cost, lbl =>
            {
